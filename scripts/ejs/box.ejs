<h4 class="text-gray"><i class="linecons-tag" style="margin-right: 7px;" id="<%= category_title %>"></i><%= category_title %></h4>
<div class="row">
    <% for( let i = 0; i < categories.length; i++ ) { %>
        <div class="col-sm-3">
            <div class="xe-widget xe-conversations box2 label-info" onclick="window.open('<%=categories[i].url%>', '_blank')" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="<%=categories[i].url%>">
                <div class="xe-comment-entry">
                    <a class="xe-user-img">
                        <img data-src="<%=categories[i].img%>" class="lozad img-circle" width="40">
                    </a>
                    <div class="xe-comment">
                        <a href="#" class="xe-user-name overflowClip_1">
                            <strong><%=categories[i].name%></strong>
                        </a>
                        <p class="overflowClip_2"><%=categories[i].desc%></p>
                    </div>
                </div>
            </div>
        </div>    
    <% } %>
</div>
<br />